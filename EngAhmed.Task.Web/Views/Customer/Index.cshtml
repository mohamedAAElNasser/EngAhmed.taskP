@model List<EngAhmed.TaskP.Web.Models.ViewModels.CustomerViewModels.CustomerVm>
@{
    ViewData["Titel"] = "Customers";
}
<div class="contentList">
    <a class="btn btn-primary" asp-action="Create">Create New Customer</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Customer Name</th>
           
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.name</td>
                    
                    <td><a href="/Customer/Edit?id=@customer.id" class="btn btn-success">Edit</a></td>
                    <td><a href="/Customer/Delete?id=@customer.id" class="btn btn-danger">Delete</a></td>

                </tr>
            }
        </tbody>
    </table>
</div>