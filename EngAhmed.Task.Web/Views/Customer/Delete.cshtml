@model EngAhmed.TaskP.Web.Models.ViewModels.CustomerViewModels.CustomerVm

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-danger">Delete Customer</h1>
    <h3 class="text-warning">Are you sure you want to delete this?</h3>
    <div class="card">
        <div class="card-header">
            <h4>Customer Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.id)
                </dt>
                <dd class="col-sm-9">
                    <input type="text" class="form-control" value="@Model.id" readonly />
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.name)
                </dt>
                <dd class="col-sm-9">
                    <input type="text" class="form-control" value="@Model.name" readonly />
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
